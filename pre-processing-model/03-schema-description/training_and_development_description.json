    {"name": "training_program_name", "description": "Program name.", "example": "Customer Service"},
    {"name": "training_type", "description": "Type (Internal/External/Online/Onsite).", "example": "Internal"},
    {"name": "training_outcome", "description": "Outcome (Passed/Failed/Completed).", "example": "Failed"},
    {"name": "location", "description": "Training location.", "example": "Port Greg"},
    {"name": "trainer", "description": "Trainer name.", "example": "Amanda Daniels"},
